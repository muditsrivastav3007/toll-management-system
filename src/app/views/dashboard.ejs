<script type="text/javascript" defer async src="js/dashboard.js"></script>
<script type="text/javascript" defer async src="js/addPass.js"></script>
<%- layout('layout/layout.ejs') %>

    <div class="content-wrapper">

        <div class="container">

            <div class="table-responsive">
                <table class="table table-bordered table-hover passUsageDataTable">
                </table>
            </div>
            <button type="button" class="btn btn-primary roundbutton passUsage">Add New</button>
        </div>
    </div>
    <div id="showPassUsageModal" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-lg">
          <div class="modal-content centre">
            <div class="modal-header bg-aqua-active">
              <button type="button" class="close" data-dismiss="modal" id="popUpClose">&times;</button>
              <h4 class="modal-title">Add Receipt</h4>
            </div>
            <div class="modal-body">
              <div class="container">
                  <div class="row">
                    <div class="col-md-8 col-sm-8 col-xs-8">
                        <div class="panel panel-success" style="border: 0;">
                            <div class="panel-body">
                                <div class="form-group">
                                    <label>Registration Number <label style="color: red">*</label></label>
                                    <input class="form-control" type="text" autocomplete="off" id="reg_number" placeholder="Enter Registration Number"  required />
                                </div>
                    
                                <div class="form-group">
                                    <label>Issue Date <label style="color: red">*</label></label>
                                    <input class="form-control" type="datetime-local" autocomplete="off" id="issue_date" required />
                                </div>
                    
                                <div class="form-group">
                                    <label>Price <label style="color: red">*</label></label>
                                    <input class="form-control" type="number" autocomplete="off" id="applicant_cost" placeholder="Enter the amount for which you need the receipt" required />
                                </div>
                    
                                <button type="submit" name="create" id="submitPass" class="btn btn-success">Add Receipt</button>
                    
                            </div>
                        </div>
                    </div>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>

<%- include('partials/footbar.ejs') %>

